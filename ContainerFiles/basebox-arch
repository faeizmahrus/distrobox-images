# Select image to build off of
FROM quay.io/toolbx/arch-toolbox

# Metadata stuff
LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the distrobox command." \
      summary="Basic Arch Toolbox image." \
      maintainer="faeizmahrus@outlook.com"

# Copy scripts
COPY ../scripts/distrobox-shims.sh /
COPY ../scripts/basebox-arch.sh /


# Run scripts
RUN chmod +x /basebox-arch.sh && /basebox-arch.sh
#RUN chmod +x /distrobox-shims.sh && /distrobox-shims.sh

# Remove scripts
RUN rm -rf /basebox-arch.sh /distrobox-shims.sh
